<Window x:Class="Image_Manipulation_App.ParamWindows.BorderPixelsHandlingMethodParamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App.ParamWindows"
        mc:Ignorable="d"
        Title="" Height="120" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="HandleBorderPixelsMethodLabel" Text="Handle Border Pixels Method" />
        <ComboBox x:Name="HandleBorderPixelsMethodComboBox" Width="150" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="Isolated"/>
            <ComboBoxItem Content="Reflect"/>
            <ComboBoxItem Content="Replicate"/>
        </ComboBox>

        <Button Content="" x:Name="ApplyButton" Width="100" Click="OnApplyButton_Click" Margin="10"/>
    </StackPanel>
</Window>
