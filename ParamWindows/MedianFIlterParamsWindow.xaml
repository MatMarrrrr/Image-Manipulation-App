<Window x:Class="Image_Manipulation_App.MedianFIlterParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App"
        mc:Ignorable="d"
        Title="MedianFIlterParamsWindow" Height="180" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="KernelSizeLabel" Text="Kernel size:" />
        <ComboBox x:Name="KernelSizeComboBox" Width="150" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="3x3"/>
            <ComboBoxItem Content="5x5"/>
            <ComboBoxItem Content="7x7"/>
        </ComboBox>
        <TextBlock x:Name="HandleBorderPixelsMethodLabel" Text="Handle Border Pixels Method" />
        <ComboBox x:Name="HandleBorderPixelsMethodComboBox" Width="150" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="Isolated"/>
            <ComboBoxItem Content="Reflect"/>
            <ComboBoxItem Content="Replicate"/>
        </ComboBox>
        <Button Content="Applay Median Filter" x:Name="ApplyMedianFilterButton" Click="OnApplyMedianFilterButton_Click" Margin="10"/>
    </StackPanel>
</Window>
