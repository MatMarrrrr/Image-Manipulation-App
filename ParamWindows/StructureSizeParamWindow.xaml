<Window x:Class="Image_Manipulation_App.ParamWindows.StructureSizeParamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App.ParamWindows"
        mc:Ignorable="d"
        Title="" Height="211" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="StructureTypeLabel" Text="Select Structure Size" />
        <ComboBox x:Name="StructureTypeComboBox" Width="150" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="Diamond"/>
            <ComboBoxItem Content="Square"/>
        </ComboBox>
        <TextBlock x:Name="StructureSizeLabel" Text="Select Structure Size" />
        <ComboBox x:Name="StructureSizeComboBox" Width="150" Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="3x3"/>
            <ComboBoxItem Content="5x5"/>
        </ComboBox>

        <Button Content="" x:Name="ApplyButton" Width="100" Click="OnApplyButton_Click" Margin="10"/>
    </StackPanel>
</Window>
