<Window x:Class="Image_Manipulation_App.StretchContrastParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App"
        mc:Ignorable="d"
        Title="Stretch Params" Height="196" Width="300">
    <StackPanel>
        <TextBlock Text="Bottom value range (p1):" />
        <TextBox x:Name="BottomValueRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="Top value range (p2):" />
        <TextBox x:Name="TopValueRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="New bottom value range (q3):" />
        <TextBox x:Name="NewBottomValueRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="New top value range (q4):" />
        <TextBox x:Name="NewTopValueRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <Button Content="Stretch" x:Name="OkButton" Click="OnOkClicked" IsEnabled="False" />
    </StackPanel>
</Window>
