<Window x:Class="Image_Manipulation_App.StretchContrastParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App"
        mc:Ignorable="d"
        Title="Stretch Params" Height="196" Width="300">
    <StackPanel>
        <TextBlock Text="Bottom range (p1):" />
        <TextBox x:Name="BottomRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="Top range (p2):" />
        <TextBox x:Name="TopRangeTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="New min value (q3):" />
        <TextBox x:Name="MinValueTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <TextBlock Text="New max value (q4):" />
        <TextBox x:Name="MaxValueTextBox" TextChanged="ValueTextBox_TextChanged"/>

        <Button Content="Stretch" x:Name="OkButton" Click="OnOkClicked" IsEnabled="False" />
    </StackPanel>
</Window>
