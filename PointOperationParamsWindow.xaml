<Window x:Class="Image_Manipulation_App.PointOperationParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App"
        mc:Ignorable="d"
        Title="PointOperationParamsWindow" Height="230" Width="600">
    <StackPanel Margin="5">
        <Label Content="Image 1:" Margin="0,10,0,0"/>
        <ComboBox x:Name="ImagesList1" Margin="0,10,0,0"/>

        <Label Content="Image 2:" Margin="0,10,0,0"/>
        <ComboBox x:Name="ImagesList2" Margin="0,10,0,0"/>

        <Button x:Name="OperationButton" Click="OperationButton_Click" Width="200" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
