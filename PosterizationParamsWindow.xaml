<Window x:Class="Image_Manipulation_App.PosterizationParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Manipulation_App"
        mc:Ignorable="d"
        Title="Posterization Params" Height="120" Width="280" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Number of levels:" />
        <TextBox x:Name="NumberOfLevelsTextBox" TextChanged="NumberOfLevelsTextBox_TextChanged"/>

        <Button Content="Posterize" x:Name="PosterizeButton" Width="100" Click="OnPosterizeClicked" IsEnabled="False" Margin="10"/>
    </StackPanel>
</Window>
